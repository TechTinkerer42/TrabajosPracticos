<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.hotelapp.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ListHotels</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.hotelapp.ListHotels</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListHotels</servlet-name>
		<url-pattern>/ListHotels</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ViewHotel</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.hotelapp.ViewHotel</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewHotel</servlet-name>
		<url-pattern>/ViewHotel</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddComment</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.hotelapp.AddComment</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddComment</servlet-name>
		<url-pattern>/AddComment</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>LoginCheckFilter</filter-name>
		<filter-class>ar.edu.itba.it.paw.hotelapp.filter.LoginCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>SessionUpdaterFilter</filter-name>
		<filter-class>ar.edu.itba.it.paw.hotelapp.filter.SessionUpdaterFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionUpdaterFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
